<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
    <div class="text-center">
      <%= link_to "Add Poem", new_sabrina_poem_path, class: "btn btn-primary add-poem-btn" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-body poem">
        <br>
        <table>
          <tbody class="sortable">  <!-- sortable target -->
            <% sortable_fetch(@poems) do |poem, id_tag| %>  <!-- RailsSortable helper -->
              <tr id="<%= id_tag %>">  <!-- you must write it -->
                <td><%= link_to poem.title, sabrina_poem_path(poem), class: "title-link" %></td>
                <td><%= poem.sort %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
